{% extends 'base.html.twig' %}
{% block header %}
    <div class="header">
        <h1>My Calendar</h1>
    </div>

{% endblock %}

{% block body %}
    <div class="container">
        <div id="toolbar">
            <div>
                {% if persistedCalendars is defined %}
                    {% for calendar in persistedCalendars %}
                        <div class="calendar-title calendar-select" id="{{ calendar.getGoogleId }}">
                            {{ calendar.getName }}
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <div>
                <a href="#" id="showImportCalendarModal">Add more</a>
            </div>
        </div>
        <div id="calendar">

        </div>
    </div>
{% endblock %}

{% block modal %}
    <div class="modal import-calendar">
        <div class="calendar-title" id="close-modal"></div>
        {% if availableCalendars is defined %}
            {% if availableCalendars is not empty %}
                <div class="calendar-list">
                    {% for calendar in availableCalendars %}
                        <div class="calendar-title calendar-entity" id="{{ calendar.getId }}">
                            {{ calendar.getSummary }}
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="import-message">
                    No available calendars in account!
                </div>
            {% endif %}
        {% endif %}
    </div>
    {{ encore_entry_script_tags('importCalendar') }}
{% endblock %}
